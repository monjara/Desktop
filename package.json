{
  "name": "remix-template-remix",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -i ./styles/app.css -o ./app/styles/app.css",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "lint": "eslint --ext .tsx --ext .ts app/"
  },
  "dependencies": {
    "@remix-run/node": "^1.3.5",
    "@remix-run/react": "^1.3.5",
    "@remix-run/serve": "^1.3.5",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "postcss": "^8.4.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "eslint": "^8.13.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
